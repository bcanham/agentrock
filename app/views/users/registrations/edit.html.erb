<div class="col_12">
	<div class="col_2">
		<%= render "shared/left_sidebar" %>
	</div>


	<div class="col_6">
		<div class="col_6">
			<%= render "shared/user_sub_nav" %>
		</div>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

		  <p><label style="display:block;text-align:left;float:none">Email<span style="color: #990000">*</span></label>
		  <%= f.text_field :email %></p>

		  <p><label style="display:block;text-align:left;float:none">Change Password<span style="color: #990000">*</span></label> <i>(leave blank if you don't want to change it)</i><br />
		  <%= f.password_field :password %></p>

		  <p><label style="display:block;text-align:left;float:none">Confirm Password<span style="color: #990000">*</span></label>
		  <%= f.password_field :password_confirmation %></p>

		  <p><label style="display:block;text-align:left;float:none">Current Password<span style="color: #990000">*</span></label> <i>(we need your current password to confirm your changes)</i><br />
		  <%= f.password_field :current_password %></p>

		  <p><%= f.submit "Update", :class => "red" %></p>
		<% end %>

		<%= link_to "Back", :back %>
	</div>
</div>